@model WebAppplication_01.Models.Voiture

@{
    ViewData["Title"] = "NouvelleVoiture";

}

<h2>Ajouter Nouvelle voiture</h2>

<form asp-action="NouvelleVoiture" method="post">
    <div class="form-group">
        <label asp-for="Fabricant" class="control-label"></label>
        <input asp-for="Fabricant" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Modele" class="control-label"></label>
        <input type="text" asp-for="Modele" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Anne" class="control-label"></label>
        <input type="number" asp-for="Anne" class="form-control" />
    </div>
    <input type="submit" value="Ajouter" class="btn btn-primary"/>
</form>

<a asp-action="Index" class="btn btn-link">Voltar</a>