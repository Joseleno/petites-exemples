@model IList<Sondage.Models.Cryptocurrency>

<h4>Laquelle de ces crypto-monnaies connaissez-vous</h4>
<hr />
<form asp-controller="Cryptocurrencies" asp-action="SelecitonerCrypto" method="post" class="form-group">
    @{
        for (int i = 0; i < Model.Count(); i++)
        {
            <input asp-for="@Model[i].Selectionne" type="checkbox" />
            <label asp-for="@Model[i].CryptocurrencyId" >@Model[i].Nom</label>
            <input asp-for="@Model[i].CryptocurrencyId" type="hidden"/>
            <input asp-for="@Model[i].Nom" type="hidden" />
            <br />
        }

        <input type="submit" value="Send" class="btn btn-primary"/>
    }

</form>