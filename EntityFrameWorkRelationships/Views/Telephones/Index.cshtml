@model X.PagedList.IPagedList<EntityFrameWorkRelationships.Models.Telephone>
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Numero
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TelephoneId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TelephoneId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TelephoneId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
